{
    "name": "Azalea",
    "version": "3.5.5",
    "description": "The cutest SparxMaths extension for Chromium ~!",
    "manifest_version": 3,
    "author": "Rosie",

    "icons": {
        "128": "assets/logo.png"
    },

    "action": {
        "default_icon": {
            "128": "assets/logo.png"
        },
        "default_title": "Azalea"
    },

    "permissions": [
        "declarativeNetRequestWithHostAccess",
        "debugger",
        "activeTab",
        "storage"
    ],

    "host_permissions": [
        "*://*.sparxmaths.uk/*",
        "https://www.sparxmaths.uk/*",
        "*://auth.sparxmaths.uk/*"
    ],

    "content_scripts": [
        {
            "js": [ "index.js" ],
            "matches": [ "https://*.sparxmaths.uk/*", "https://sparxmaths.uk/*" ],
            "run_at": "document_start"
        }
    ],

    "background": {
        "service_worker": "worker.js"
    },

    "externally_connectable": {
        "matches": [ "https://*.sparxmaths.uk/*", "https://sparxmaths.uk/*" ]
    },

    "web_accessible_resources": [
        {
            "resources": [
                "bundle.js",
                "loader.js",
                "cute.css",
                "core.css"
            ],
            "matches": [
                "https://*.sparxmaths.uk/*"
            ]
        }
    ],

    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "azalea-remove-csp",
                "enabled": true,
                "path": "headers.json"
            }
        ]
    }
}